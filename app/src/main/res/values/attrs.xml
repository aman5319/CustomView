<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EmotionalView">
        <attr name="faceColor" format="color" />
        <attr name="eyesColor" format="color" />
        <attr name="mouthColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="state" format="enum">
            <enum name="happy" value="1" />
            <enum name="sad" value="0" />
        </attr>
    </declare-styleable>


    <declare-styleable name="RevealView">
        <attr name="colorBar" format="color|reference" />
        <attr name="contentBar" format="color|reference" />
        <attr name="barTitle" format="string" />
        <attr name="message" format="string" />
        <attr name="showMessage" format="boolean" />


    </declare-styleable>
</resources>